<%= render partial: "shared/header" %>
<%= render partial: "shared/search" %>

<div  style="max-width:1260px;margin:auto;margin-top:24px" class="w3-hide-small w3-display-container w3-animate-opacity">
  <% @tintucs.each do |tintuc| %>
	  <% if tintuc.b %>
		  <%= link_to tintuc do %>
		  	<%= image_tag tintuc.image.url, style: "width:100%" %>
		  	<div style="margin-left:42px" class="w3-indigo w3-padding w3-display-bottomleft w3-text-white w3-half  w3-container"><h1><strong><%= tintuc.title %></strong></h1><p class="w3-text-yellow"><strong><%= tintuc.description %></strong></p></div>
		  <% end %>
	  <% end %>
  <% end %>
</div> 

<div style="max-width:1260px;margin:auto" class="w3-hide-small w3-main" >
	<div class=" w3-hide-medium w3-container" >
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<!-- home page -->
			<ins class="adsbygoogle"
			     style="display:inline-block;width:728px;height:90px"
			     data-ad-client="ca-pub-9796522511877943"
			     data-ad-slot="3611847518">
			</ins>
		<script>
		(adsbygoogle = window.adsbygoogle || []).push({});
		</script>
	</div>
	
	<div style="margin-left:42px" class="w3-container">
		<div class="w3-hide-small">
			<div style="margin-bottom:30px" class="w3-container w3-padding">
				<% @tintucs.each do |tintuc| %>
					<% if tintuc.a %>
					<%= link_to tintuc do %>
						<div class="w3-padding  w3-col l3 m4">
							<div class="w3-card-2 w3-white content">
								<div class=" w3-container w3-padding-small ">
									<%= image_tag tintuc.image.url, style: "width:100%" %>
								</div>
								
								<div style="min-height:100px;line-height:1.2;font-size:12px" class="w3-display-container w3-padding w3-container">
									<p style="color:#9E8383"><%= tintuc.created_at.strftime("%d-%m-%Y") %></p>
				  					<p><strong><%= tintuc.title %></strong></p>
								    <div style="background:#2C2453;color:white" class=" w3-padding w3-display-topright"><%= tintuc.description %></div>
								</div>
							</div>
						</div>	
					<% end %>
					<% end %>
				<% end %>
			</div>
			</div>
		</div>
	</div>
	
	<div class="w3-center w3-hide-medium w3-container=" >
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<!-- long add 2 -->
			<ins class="adsbygoogle"
			     style="display:inline-block;width:728px;height:90px"
			     data-ad-client="ca-pub-9796522511877943"
			     data-ad-slot="8622299916">
			</ins>
		<script>
		(adsbygoogle = window.adsbygoogle || []).push({});
		</script>
	</div>
	
<%= render partial: "shared/footer" %>	
	