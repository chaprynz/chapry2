<% content_for :head do %>
	<title><%= @post.title %></title>
	<!-- Open Graph data -->
	<meta property="og:site_name" content="chapry">
	<meta property="fb:app_id" content="984512708308216"></meta>
	<meta property="og:url" content="<%= request.original_url %>"></meta>
	<meta property="og:type" content="article">
	<meta property="og:title" content="<%= @post.title %>">
	<meta property="og:description" content="<%= @post.shortdescription %>">
	<meta property="og:image" content="<%= @post.image.url %>">
<% end %>

<%= render partial: "shared/header" %>
<%= render partial: "shared/search" %>

<div style="max-width:1260px;margin:auto" class="w3-main">
	<div style="margin-top:18px" class="w3-container ">
		<div style="font-family:Merriweather,Times,sans-serif;font-size:21px;" class=" w3-col l8  m8 s12">
			<div style="margin-left:42px" class="w3-hide-small videoWrapper w3-container">
					<%= raw @post.video %>
			</div>
			
			<div class="w3-center w3-hide-medium w3-container=" >
				<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
					<!-- home page -->
					<ins class="adsbygoogle"
					     style="display:inline-block;width:728px;height:90px"
					     data-ad-client="ca-pub-9796522511877943"
					     data-ad-slot="3611847518">
					</ins>
				<script>
				(adsbygoogle = window.adsbygoogle || []).push({});
				</script>
			</div>
			
			<div class="w3-hide-large w3-hide-medium videoWrapper w3-container">
				<%= raw @post.video %>
			</div><br>
			
			<div style="margin-left:42px" class="w3-container w3-white w3-padding">
				<div class="fb-like" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
				
				<div  class=" alink ">
					<%= raw @post.content %>
				</div>
			</div>
			
			<div  style="margin-left:42px" class="w3-padding w3-white w3-container">
				<div class="fb-like" data-width="200" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
				<div  class="fb-comments" data-width="100%" data-href="" data-numposts="5"></div>
			</div>
		</div>
		
		<%= render partial: "shared/postsidebar" %>
	</div>
</div>

<div id="fb-root"></div>
<%= render partial: "shared/footer" %>

<script>
for (var i = 0; i < document.links.length; i++) {
    if (document.links[i].href == document.URL) {
        document.links[i].className = 'active';
    }
}
</script>